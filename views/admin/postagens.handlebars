<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success" type="button">Nova Postagem</button></a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descricao: {{descricao}}</p>
      <small>Data: {{data}}</small><br>
      <small>Nome categoria: {{categoria.nome}}</small><br>
      <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3" type="submit">Editar Postagem</button></a>
      <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3" type="submit">Deletar Postagem</button></a>
    </div>
  </div>
{{else}}
  <p>Nenhuma Postagem registrada</p>
{{/each}}
